{
  "version": 2,
  "scope": "denopkg",
  "rewrites": [
    {
      "source": "/github/([^/]+)/(.+)",
      "destination": "/api/github?slug=$1/$2"
    },
    {
      "source": "/gitlab/([^/]+)/(.+)",
      "destination": "/api/gitlab?slug=$1/$2"
    },
    {
      "source": "/bitbucket/([^/]+)/(.+)",
      "destination": "/api/bitbucket?slug=$1/$2"
    },
    {
      "source": "/std/([^/]+)/(.+)",
      "destination": "/api/std?slug=$1/$2"
    }
  ]
}
